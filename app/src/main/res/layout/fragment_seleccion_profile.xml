<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home_fragments.SeleccionProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Imagen de perfil centrada con buen ajuste -->
        <ImageView
            android:id="@+id/ivProfileSelected"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Nombre del perfil -->
        <TextView
            android:id="@+id/list_cell_txtview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre: John Doe"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/ivProfileSelected"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Cumpleaños -->
        <TextView
            android:id="@+id/list_cell_txtview_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cumpleaños: 01/01/1990"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/list_cell_txtview_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Facción -->
        <TextView
            android:id="@+id/list_cell_txtview_faccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facción: Exploradores"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/list_cell_txtview_birthday"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Personaje favorito -->
        <TextView
            android:id="@+id/list_cell_txtview_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personaje Favorito: John Wick"
            android:textSize="14sp"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toBottomOf="@id/list_cell_txtview_faccion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botón de editar -->
        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Editar Foto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_cell_txtview_character" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>




