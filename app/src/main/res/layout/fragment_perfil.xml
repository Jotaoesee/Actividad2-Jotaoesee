<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/perfil_bici"
    tools:context=".fragments.PerfilFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/txNombrePerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="92dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/border_edit_text"
            android:ems="10"
            android:fontFamily="@font/simple_cake"
            android:inputType="text"
            android:minHeight="60dp"
            android:padding="16dp"
            android:paddingStart="10dp"
            android:text="Nombre:"
            android:textColor="@color/azul"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txApellidosPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="92dp"
            android:layout_marginTop="24dp"
            android:padding="16dp"
            android:minHeight="60dp"
            android:background="@drawable/border_edit_text"
            android:paddingStart="10dp"
            android:textColor="@color/azul"
            android:fontFamily="@font/simple_cake"
            android:ems="10"
            android:inputType="text"
            android:text="Apellidos:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txNombrePerfil" />

        <EditText
            android:id="@+id/txEdadPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="92dp"
            android:layout_marginTop="24dp"
            android:padding="16dp"
            android:minHeight="60dp"
            android:background="@drawable/border_edit_text"
            android:paddingStart="10dp"
            android:textColor="@color/azul"
            android:fontFamily="@font/simple_cake"
            android:ems="10"
            android:inputType="text"
            android:text="Edad:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txApellidosPerfil" />

        <EditText
            android:id="@+id/txNumeroPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="92dp"
            android:layout_marginTop="24dp"
            android:padding="16dp"
            android:minHeight="60dp"
            android:background="@drawable/border_edit_text"
            android:paddingStart="10dp"
            android:textColor="@color/azul"
            android:fontFamily="@font/simple_cake"
            android:ems="10"
            android:inputType="text"
            android:text="Numero de Movil:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txEdadPerfil" />

        <EditText
            android:id="@+id/txBiografiaPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="92dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/border_edit_text"
            android:ems="10"
            android:fontFamily="@font/simple_cake"
            android:inputType="textMultiLine"
            android:minHeight="60dp"
            android:padding="16dp"
            android:paddingStart="10dp"
            android:text="Biografía:"
            android:textColor="@color/azul"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txNumeroPerfil" />

        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="136dp"
            android:layout_marginTop="80dp"
            android:text="Cerrar Sesión"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txBiografiaPerfil" />

        <Button
            android:id="@+id/btnEditarPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="144dp"
            android:layout_marginTop="24dp"
            android:text="Editar Perfil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txBiografiaPerfil" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>