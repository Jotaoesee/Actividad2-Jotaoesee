<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/NavHostFragment"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="org.eurekamps.dam2_2425_actividad1.fragments.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_registroFragment"
            app:destination="@id/registroFragment" />
        <action
            android:id="@+id/action_loginFragment_to_perfilFragment"
            app:destination="@id/perfilFragment" />
        <action
            android:id="@+id/action_loginFragment_to_profilesFragment"
            app:destination="@id/profilesFragment" />
    </fragment>
    <fragment
        android:id="@+id/perfilFragment"
        android:name="org.eurekamps.dam2_2425_actividad1.fragments.PerfilFragment"
        android:label="fragment_perfil"
        tools:layout="@layout/fragment_perfil" >
        <action
            android:id="@+id/action_perfilFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_perfilFragment_to_profilesFragment"
            app:destination="@id/profilesFragment" />
    </fragment>
    <fragment
        android:id="@+id/registroFragment"
        android:name="org.eurekamps.dam2_2425_actividad1.fragments.RegistroFragment"
        android:label="RegistroFragment" >
        <action
            android:id="@+id/action_registroFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_splashFragment_to_perfilFragment"
            app:destination="@id/perfilFragment" />
        <action
            android:id="@+id/action_splashFragment_to_profilesFragment"
            app:destination="@id/profilesFragment" />
    </fragment>
    <fragment
        android:id="@+id/profilesFragment"
        android:name="org.eurekamps.dam2_2425_actividad1.fragments.ProfilesFragment"
        android:label="fragment_profiles"
        tools:layout="@layout/fragment_profiles" />
</navigation>